            <Grid.RowDefinitions>
                <RowDefinition Height="22"/>
                <RowDefinition Height="18"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="fileName" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Text="ducktales.beep" FontSize="16"/>
            <TextBlock x:Name="filePath" TextTrimming="CharacterEllipsis" Grid.Row="1" TextWrapping="NoWrap" Text="C:\Users\Thomas\Desktop\Beeper\Beeper\bin\Debug\ducktales\file.beep" FontSize="10" Margin="0,0,0,4"/>
        </Grid>
